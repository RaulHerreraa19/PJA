{
  "name": "attendance-control-api",
  "version": "1.0.0",
  "description": "Production-ready attendance control backend (Node.js + TypeScript + Express + Sequelize)",
  "main": "dist/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "jest",
    "sequelize": "node -r ts-node/register ./node_modules/sequelize-cli/lib/sequelize",
    "migrate": "npm run sequelize -- db:migrate",
    "migrate:undo": "npm run sequelize -- db:migrate:undo",
    "seed": "npm run sequelize -- db:seed:all",
    "seed:undo": "npm run sequelize -- db:seed:undo:all",
    "queue:worker": "ts-node src/jobs/workers/importClockings.worker.ts",
    "sequelize:dist": "node ./node_modules/sequelize-cli/lib/sequelize --config dist/database/config/config.js --migrations-path dist/database/migrations --seeders-path dist/database/seeders --models-path dist/database/models",
    "migrate:dist": "npm run sequelize:dist -- db:migrate",
    "seed:dist": "npm run sequelize:dist -- db:seed:all",
    "queue:worker:dist": "node dist/jobs/workers/importClockings.worker.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.21.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "fast-csv": "^5.0.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.11.0",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "puppeteer": "^23.7.0",
    "sequelize": "^6.37.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.1.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
